                 {% set general = app.session.get('general') %}
             
               <form  method="POST" action="{{path('raa_user_actualizar_slider')}}"  enctype="multipart/form-data"   >
      
                 
                   <div class="row center-block"  style="margin: auto;width: 50%;padding: 10px;" >
                      
                      <!--IMAGENES DE SLIDER-->
                        
