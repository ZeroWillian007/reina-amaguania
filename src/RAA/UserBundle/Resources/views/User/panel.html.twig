                                                <img id="img-slider3"  class="img-fluid img-thumbnail" src="{{ asset('uploads/slider/' ~ general.getSlide3) }}" alt="">
                                                 <input    type="file" style="display: none"  id="file-slider3" name="file-slider3" >
